  <p class="creditos">Total de créditos: <span id="creditos">0</span></p>

<script>
  const materias = document.querySelectorAll('.materia');
  const creditosSpan = document.getElementById('creditos');

  // Restaurar progreso desde localStorage
  const progresoGuardado = JSON.parse(localStorage.getItem('materiasAprobadas')) || [];
  materias.forEach(m => {
    if (progresoGuardado.includes(m.dataset.id)) {
      m.classList.add('aprobada');
    }
  });

  function actualizarCreditos() {
    let total = 0;
    document.querySelectorAll('.materia.aprobada').forEach(m => {
      total += parseInt(m.dataset.creditos);
    });
    creditosSpan.textContent = total;
  }

  function actualizarBloqueos() {
    materias.forEach(m => {
      const previas = m.dataset.previas ? m.dataset.previas.split(',') : [];
      const aprobadas = [...document.querySelectorAll('.materia.aprobada')].map(el => el.dataset.id);
      const desbloqueada = previas.every(p => aprobadas.includes(p));
      if (!desbloqueada && previas.length > 0 && !m.classList.contains('aprobada')) {
        m.classList.add('bloqueada');
      } else {
        m.classList.remove('bloqueada');
      }
    });
  }

  function guardarProgreso() {
    const aprobadas = [...document.querySelectorAll('.materia.aprobada')].map(el => el.dataset.id);
    localStorage.setItem('materiasAprobadas', JSON.stringify(aprobadas));
  }

  // Desbloqueo de Itinerario con múltiples rutas
  function desbloquearItinerario() {
    const aprobadas = [...document.querySelectorAll('.materia.aprobada')].map(el => el.dataset.id);

    const rutaA = [
      "Psicologia social",
      "Art. de saberes 1: construccion del sujeto y del objeto en Psicologia",
      "Teorias Psicologicas",
      "fundamentos de la psicologia"
    ];

    const rutaB = [
      "Psicologia, Sujeto y Aprendizaje",
      "procesos-cognitivos",
      "Neurobiologia de la mente",
      "psicologia-desarrollo"
    ];

    const rutaC = [
      "clinica1",
      "Art. de saberes 3: clinica y subjetividad",
      "Etica y deontologia",
      "Epistemologia"
    ];

    const rutaD = [
      "psicologia salud",
      "Art. de saberes 2: Psicologia, Genero y Derechos Humanos"
    ];

    const cumpleRuta = (ruta) => ruta.every(id => aprobadas.includes(id));
    const desbloquear = cumpleRuta(rutaA) || cumpleRuta(rutaB) || cumpleRuta(rutaC) || cumpleRuta(rutaD);

    const materia = document.querySelector('.materia[data-id="itinerario"]');
    if (materia && !materia.classList.contains("aprobada")) {
      if (desbloquear) {
        materia.classList.remove("bloqueada");
      } else {
        materia.classList.add("bloqueada");
      }
    }
  }

  // Desbloqueo y sincronización de Referencial de Egreso
  function desbloquearReferencialEgreso() {
    const aprobadas = [...document.querySelectorAll('.materia.aprobada')].map(el => el.dataset.id);

    const rutaReferencial = [
      "fundamentos de la psicologia",
      "Teorias Psicologicas",
      "Psicologia social",
      "Entrevista Psicologica",
      "Inicio a la formacion en Psicologia",
      "clinica1",
      "Art. de saberes 3: clinica y subjetividad",
      "articulacion2",
      "Art. de saberes 1: construccion del sujeto y del objeto en Psicologia",
      "psicologia-educacion",
      "dispositivos-psicoterapeuticos"
    ];

    const cumple = rutaReferencial.every(id => aprobadas.includes(id));

    const ids = ["referencial-egreso-7", "referencial-egreso-8"];
    ids.forEach(id => {
      const materia = document.querySelector(`.materia[data-id="${id}"]`);
      if (materia && !materia.classList.contains("aprobada")) {
        if (cumple) {
          materia.classList.remove("bloqueada");
        } else {
          materia.classList.add("bloqueada");
        }
      }
    });
  }

  materias.forEach(materia => {
    materia.addEventListener('click', () => {
      if (materia.classList.contains('bloqueada')) return;

      // Sincronización especial para Referencial duplicado
      if (materia.dataset.id === "referencial-egreso-7" || materia.dataset.id === "referencial-egreso-8") {
        const yaAprobada = materia.classList.contains("aprobada");
        const ambas = document.querySelectorAll('.materia[data-id="referencial-egreso-7"], .materia[data-id="referencial-egreso-8"]');
        ambas.forEach(m => m.classList.toggle('aprobada', !yaAprobada));
      } else {
        materia.classList.toggle('aprobada');
      }

      guardarProgreso();
      actualizarCreditos();
      actualizarBloqueos();
      desbloquearItinerario();
      desbloquearReferencialEgreso();
    });
  });
function desbloquearOptativas() {
  const aprobadas = [...document.querySelectorAll('.materia.aprobada')].map(el => el.dataset.id);

  const requeridas = [
    "fundamentos de la psicologia",
    "Historia de la psicologia",
    "Neurobiologia de la mente",
    "Epistemologia",
    "Herramientas para el trabajo intelectual",
    "Art. de saberes 1: construccion del sujeto y del objeto en Psicologia",
    "Inicio a la formacion en Psicologia",
    "Etica y deontologia",
    "Psicologia Sujeto y Aprendizaje",
    "psicologia salud",
    "clinica1",
    "Art. de saberes 3: clinica y subjetividad",
    "herramientas-clinica",
    "herramientas-social",
    "Psicologia social"
  ];

  const cumple = requeridas.every(id => aprobadas.includes(id));

  const ids = ["optativa-1", "optativa-2-7", "optativa-2-8", "optativa-3"];
  ids.forEach(id => {
    const materia = document.querySelector(`.materia[data-id="${id}"]`);
    if (materia && !materia.classList.contains("aprobada")) {
      if (cumple) {
        materia.classList.remove("bloqueada");
      } else {
        materia.classList.add("bloqueada");
      }
    }
  });
}

  // Al cargar
  actualizarCreditos();
  actualizarBloqueos();
  desbloquearItinerario();
  desbloquearReferencialEgreso();
  desbloquearOptativas();
</script>
</body>
</html>
